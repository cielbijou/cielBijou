{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-light">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Modifier votre mot de passe</h4>
                    </div>
                    <div class="card-body">
                        <!-- Formulaire pour modifier le mot de passe -->
                        <form id="passwordForm" action="#" method="GET">
                            <div class="mb-3">
                                <label for="oldPassword" class="form-label">Ancien mot de passe</label>
                                <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">Nouveau mot de passe</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                            </div>
                            <div class="mb-3">
                                <label for="password2" class="form-label">Confirmer le nouveau mot de passe</label>
                                <input type="password" class="form-control" id="password2" name="password2" required>
                            </div>
                            <div class="d-grid gap-2">
                                <!-- Bouton pour soumettre le formulaire -->
                                <button type="button" id="updateButton" class="btn btn-primary">Mettre à jour</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('updateButton').addEventListener('click', function() {
            var oldPassword = document.getElementById('oldPassword').value;
            var newPassword = document.getElementById('newPassword').value;
            var password2 = document.getElementById('password2').value;

            // Créer l'URL avec les paramètres passés dans l'URL
            var url = "{{ path('edit_password_confirmation', {'newPassword': 'newPasswordValue', 'oldPassword': 'oldPasswordValue', 'password2': 'password2Value'}) }}";

            // Remplacer les valeurs dans l'URL
            url = url.replace('newPasswordValue', encodeURIComponent(newPassword))
                     .replace('oldPasswordValue', encodeURIComponent(oldPassword))
                     .replace('password2Value', encodeURIComponent(password2));

            window.location.href = url;
        });
    </script>
{% endblock %}
