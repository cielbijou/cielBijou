{% extends 'base.html.twig' %}

{% block title %}Confirmation de la commande{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Confirmation de la commande</h1>
            </div>
        </div>

        <div class="row mt-4">
        {% for Prod in items %}
                <div class="col-6 col-md-4 col-lg-2 mb-4 d-flex flex-column align-items-center">
                    <img src="{{asset('images/produit/'~Prod.produit.imageProd)}}" class="img-fluid mb-2" style="max-width: 100px;">
                    <h6>{{ Prod.produit.nomProd }}</h6>
                    <p class="text-muted">{{ Prod.produit.prixProd }} €</p>
                </div>
            {% endfor %}
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card p-4">
                    <h3 class="mb-4">Envoyé à</h3>
                    
                    <form>
                        <div class="mb-3">
                            <label for="nomPrenom" value="{{user.nom}}{{user.prenom}}" class="form-label">Nom et Prénom</label>
                            <input type="text" class="form-control" id="nomPrenom" placeholder="{{user.nom ~ ' ' ~ user.prenom }}" disabled>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" value="{{user.email}}" class="form-label">Email</label>
                            <input type="text" class="form-control" id="email" placeholder="{{user.email}}" disabled>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a href="{{path('panier')}}"><button class="btn btn-primary">Retourner au panier</button></a>
            <a href="{{path('commande_valider')}}"><button class="btn btn-primary">Confirmer la commande</button></a>
        </div>
    </div>
{% endblock %}

